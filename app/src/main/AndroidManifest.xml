<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autotests.popularmoviesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MovieDetailActivity"
            android:parentActivityName=".activity.MainActivity" />
        <provider
            android:name=".data.FavoriteMoviesProvider"
            android:authorities="com.example.autotests.popularmoviesapp"
            android:exported="false" />

        <receiver
            android:name=".receivers.RequestDataReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <service
            android:name=".sync.RequestDataIntentService"
            android:exported="false" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>