<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_movie_detail"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.autotests.popularmoviesapp.activity.MovieDetailActivity">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/iv_movie_detail_poster"
            android:scaleType="centerCrop"
            android:layout_gravity="top|center_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_movies_detail_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:padding="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_movie_details_add_fav"
                android:text="@string/add_to_favorite"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_below="@id/tv_movies_detail_title"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rtb_movie_rating"
                android:numStars="5"
                android:isIndicator="true"
                android:stepSize="0.1"
                android:layout_below="@id/bt_movie_details_add_fav"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_release_date"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_below="@id/rtb_movie_rating"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@id/tv_release_date"
                android:id="@+id/tv_movie_detail_overview"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trailers"
            android:id="@+id/tv_trailer_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:padding="16dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_trailer_list"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reviews_label"
            android:text="@string/review"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:padding="16dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_review_list">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
